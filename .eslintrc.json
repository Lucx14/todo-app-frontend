{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "airbnb/hooks",
    "plugin:prettier/recommended",
    "prettier/react",
    "prettier/standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "import", "prettier", "jsx-a11y", "jest"],
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": ["serviceWorker.js"],
      "rules": {
        "no-console": "off",
        "no-use-before-define": "off",
        "no-param-reassign": "off"
      }
    }
  ]
}
